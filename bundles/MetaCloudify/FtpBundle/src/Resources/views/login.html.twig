{% extends '@MetaCloudifyHomeBundle/base.html.twig' %}

{% block title %}Login Ftp{% endblock %}

{% block stylesheets %}
    <style>
        html,
        body {
            height: 100%;
        }

        .form-signin {
            max-width: 330px;
            padding: 1rem;
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[name="userName"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[name="password"] {
            margin-bottom: -1px;
            border-radius: 0;
        }

        .form-signin input[name="URL"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/metacloudifyhome/js/modales.js') }}"></script>
    <script src="{{ asset('bundles/metacloudifyftp/js/login.js') }}"></script>
    <script src="{{ asset('bundles/metacloudifyhome/js/localStore.js') }}"></script>
{% endblock %}

{% block body %}

    <body class="d-flex align-items-center py-4 bg-body-tertiary">

        <main class="form-signin w-100 m-auto">
            <form>
                <img class="mb-4 rounded" src="https://cdn.shopify.com/s/files/1/1198/9148/t/2/assets/ftp-promo-card.png?v=113387828774375845881579566606" alt="FTP imagen" height="57">
                <h1 class="h3 mb-3 fw-normal">Sign in</h1>

                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingBibloa" placeholder="name" >
                    <label for="floatingBibloa">Email / Username</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingBiblob" placeholder="Password" >
                    <label for="floatingBiblob">Password</label>
                </div>
                <div class="form-floating">
                    <input type="text" class="form-control" id="floatingURL" placeholder="127.0.0.1" >
                    <label for="floatingURL">URL</label>
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault" >
                    <label class="form-check-label" for="flexCheckDefault">
                        Recordar cuenta
                    </label>
                </div>
                <button id="loginButton" class="btn btn-primary w-100 py-2" type="button">Acceder</button>
                <p class="mt-5 mb-3 text-body-secondary">Â© 2024</p>
            </form>
        </main>

    </body>


    <!-- ALERTS -->
    {{ include('@MetaCloudifyHomeBundle/Includes/alerts.html.twig') }}
{% endblock %}
